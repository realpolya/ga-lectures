<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <!-- <link href="favi.png" rel="icon" type="image/png"> -->
    <title>List of fruits</title>
    
</head>
<body>
    <h1>All fruits</h1>

    <% if (fruitItem) { %> 
        <p><%= fruitItem.name %> has been deleted ðŸ˜” </p>
    <% } %>

    <ul class="main-list">
        <% allFruits.forEach((fruit) => { %>
            <li>
                <a href="/fruits/<%= fruit._id %>"><%= fruit.name %></a>
            </li>
            <ul>
                <li>
                    Is it ripe? <%= fruit.ripe %>
                </li>
            </ul>
        <% }) %>
    </ul>
    <div id="buttons">
        <form action="/fruits/new" method="GET">
            <button type="submit">Create a new fruit</button>
        </form>
    
        <form action="/" method="GET">
            <button type="submit">Go home</button>
        </form>
    </div>

</body>
</html>